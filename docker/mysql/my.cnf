# ===========================================
# Custom MySQL Configuration
# ===========================================
# Addresses security warnings and optimizes
# settings for containerized deployment
# ===========================================

[mysqld]
# Basic Settings
user = mysql
default-authentication-plugin = caching_sha2_password
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# Security Settings
# Use a secure location for PID file (create directory first)
pid-file = /var/run/mysqld/mysqld.pid

# Disable DNS hostname lookups for better performance and security
# Use the new syntax instead of deprecated skip-host-cache
host_cache_size = 0
skip-name-resolve

# Performance Settings
innodb_buffer_pool_size = 128M
max_connections = 200

# Query cache is removed in MySQL 8.0, so these settings are no longer valid
# query_cache_size = 16M
# query_cache_type = 1

# Logging (optional - uncomment if needed for debugging)
# general_log = 1
# general_log_file = /var/log/mysql/mysql.log
# slow_query_log = 1
# slow_query_log_file = /var/log/mysql/mysql-slow.log
# long_query_time = 2

# Binlog settings for replication (if needed in future)
# log-bin = mysql-bin
# server-id = 1

[mysql]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4