# ===========================================
# Flask Grade Tracker - Environment Variables
# ===========================================
# Copy this file to .env and customize for your environment

# ===========================================
# FLASK CONFIGURATION
# ===========================================
FLASK_ENV=production
FLASK_SECRET_KEY=your-super-secret-key-change-this-in-production

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# For Docker Compose (using containerized MySQL)
MYSQL_ROOT_PASSWORD=root_secure_password_123
MYSQL_DATABASE=gradetracker
MYSQL_USER=gradetracker_user
MYSQL_PASSWORD=secure_password_456

# Alternative: Use existing remote MySQL (comment out above if using this)
# DATABASE_URL=mysql+pymysql://username:password@host:port/database_name
# TEST_DATABASE_URL=mysql+pymysql://username:password@host:port/test_database_name

# ===========================================
# SECURITY & ENCRYPTION
# ===========================================
# API Token Encryption (CRITICAL - Generate a new key for production!)
API_TOKEN_ENCRYPTION_KEY=your-32-byte-base64-encoded-key
USE_HTTPS=false
SESSION_COOKIE_SECURE=false

# ===========================================
# REDIS CONFIGURATION (handled by Docker Compose)
# ===========================================
# These are set automatically in docker-compose.yml
# CACHE_TYPE=redis
# CACHE_REDIS_URL=redis://redis:6379/0
# RATELIMIT_STORAGE_URL=redis://redis:6379/1
# CELERY_BROKER_URL=redis://redis:6379/2
# CELERY_RESULT_BACKEND=redis://redis:6379/3

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_MOBILE_OPTIMIZATION=true

# ===========================================
# LOGGING & DEBUGGING
# ===========================================
LOG_LEVEL=INFO

# ===========================================
# EXTERNAL API INTEGRATIONS
# ===========================================
# Google OAuth (for Google Tasks sync)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Canvas API (if using external Canvas instance)
CANVAS_API_URL=https://your-school.instructure.com
CANVAS_API_TOKEN=your-canvas-token

# OpenAI API (for AI features)
OPENAI_API_KEY=your-openai-api-key